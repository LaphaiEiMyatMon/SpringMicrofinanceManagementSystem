@model Spring_Microfinance_Management_System.Models.BranchMaintenance

@{
    ViewBag.Title = "BranchList";
    Layout = "~/Views/Shared/_sideBar.cshtml";
}

<div class="content-wrapper">

    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">

                </div><!-- /.col -->

            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">

            <!-- Main row -->
            <div class="row">


            </div>


            <div class="container">
                <div class="row">
                    <div class="col-xl-12">
                        <div class="card">
                            <div class="card-body">
                                <h2 class="m-0">Branch List</h2>
                                <hr />
                                <div class="table-responsive">
                                    <table class="table table-hover mb-0">
                                        <thead>
                                            <tr>
                                                <th>No</th>
                                                <th>Name</th>
                                                <th>Address</th>
                                                <th>Email</th>
                                                <th>Call Center Phone No</th>

                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>

                                            @foreach (var data in Model.BranchList)
                                            {
                                                <tr>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => data.BranchNo)
                                                    </td>

                                                    <td>
                                                        @Html.DisplayFor(modelItem => data.BranchName)
                                                    </td>

                                                    <td>
                                                        @Html.DisplayFor(modelItem => data.Address)
                                                    </td>

                                                    <td>
                                                        @Html.DisplayFor(modelItem => data.Email)
                                                    </td>



                                                    <td>
                                                        @Html.DisplayFor(modelItem => data.CallCenterPhoneNo)
                                                    </td>
                                                    <td>

                                                        <a href="/BranchMaintenance/EditBranch?branchNo=@data.BranchNo">  <i class="fa fa-edit" style="font-size:15.5px;color:forestgreen"></i></a>

                                                        <a href="/BranchMaintenance/DeleteBranch?branchNo=@data.BranchNo" class="confirmation"><i class="fas fa-trash-alt" style="font-size:15.5px;color:red"> </i></a>

                                                    </td>
                                                </tr>

                                            }

                                        </tbody>
                                    </table>
                                </div>
                                <!--end table-responsive-->
                                <hr />
                                
                                <a href="CreateBranch" class="btn btn-primary" style="float:right">Register New Branch</a>
                            </div>

                        </div>
                    </div>
                </div>
            </div>

           
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>


<style>
    body {
        background: #f5f5f5;
    }

    .card {
        border: none;
        -webkit-box-shadow: 1px 0 20px rgba(96,93,175,.05);
        box-shadow: 1px 0 20px rgba(96,93,175,.05);
        margin-bottom: 30px;
    }

    .table th {
        font-weight: 500;
        color: #fff;
    }

    .table thead {
        background-color: dodgerblue;
    }

    .table > tbody > tr > td, .table > tfoot > tr > td, .table > thead > tr > td {
        padding: 11px 12px;
        vertical-align: middle;
    }


    .thumb-sm {
        height: 32px;
        width: 32px;
    }

  

    .badge-soft-warning {
        background-color: rgba(248,201,85,.2);
        color: #f8c955;
    }

    .badge {
        font-weight: 500;
    }

    .badge-soft-primary {
        background-color: rgba(96,93,175,.2);
        color: #605daf;
    }

    tr:nth-child(even) {
        background-color: aliceblue;
    }
    td a {
        display: inline-block;
        padding: 5px;
    }

    td a:first-child {
            width: 23px;
     }

    td a:last-child {
            width: 50px;
    }
</style>

@if (ViewBag.Msg != null)
{
    <script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.Message");
        };
    </script>

}

    <script type="text/javascript">
        $('.confirmation').on('click', function () {
            return confirm('Are you sure you want to Delete?');
        });
    </script>