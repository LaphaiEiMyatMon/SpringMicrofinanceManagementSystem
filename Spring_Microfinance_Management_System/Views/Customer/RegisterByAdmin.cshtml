@model Spring_Microfinance_Management_System.Models.Customer

@{
    ViewBag.Title = "RegisterByAdmin";
    Layout = "~/Views/Shared/_sideBar.cshtml";
}


<div class="content-wrapper">

    
  
        

            <!-- Main row -->
            <div class="row">


            </div>


        
           
                    <div class="col-xl-12">
                            

                                <section class="vh-100" style="background-color: aliceblue;">
                                    <div class="container h-100">
                                        <div class="row d-flex justify-content-center align-items-center h-100">
                                            <div class="col-lg-12 col-xl-11">
                                                <div class="card text-black" style="border-radius: 25px;">
                                                    <div class="card-body p-md-5">
                                                        <div class="row justify-content-center">

                                                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                                                                <p class="h1 fw-bold mb-5 mx-1 mx-md-4 mt-4" style="color:#0d6efd">Register Here !!!</p>
                                                                @*mx-1 mx-md-4*@
                                                                @using (Html.BeginForm())
                                                                {
                                                                    @Html.AntiForgeryToken()
                                                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                                                    @Html.HiddenFor(model => model.CustomerEntity.CustomerID)

                                                                    <div class="d-flex flex-row align-items-center mb-4">
                                                                        <i class="fa fa-user fa-lg me-3 fa-fw"></i>
                                                                        <div class="form-outline flex-fill mb-0">
                                                                            @Html.TextBoxFor(m => m.CustomerEntity.FirstName, new { @class = "form-control", placeholder = "Enter your first name" })
                                                                            @Html.ValidationMessageFor(m => m.CustomerEntity.FirstName, "", new { @class = "text-danger" })

                                                                        </div>

                                                                    </div>

                                                                    <div class="d-flex flex-row align-items-center mb-4">
                                                                        <i class="fa fa-user fa-lg me-3 fa-fw"></i>
                                                                        <div class="form-outline flex-fill mb-0">
                                                                            @Html.TextBoxFor(m => m.CustomerEntity.LastName, new { @class = "form-control", placeholder = "Enter your last name" })
                                                                            @Html.ValidationMessageFor(m => m.CustomerEntity.LastName, "", new { @class = "text-danger" })

                                                                        </div>
                                                                    </div>

                                                                    <div class="d-flex flex-row align-items-center mb-4">
                                                                        <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                                                        <div class="form-outline flex-fill mb-0">
                                                                            @Html.TextBoxFor(model => model.CustomerEntity.Email, new { @class = "form-control", type = "email", placeholder = "Enter your email" })
                                                                            @Html.ValidationMessageFor(m => m.CustomerEntity.Email, "", new { @class = "text-danger" })

                                                                        </div>
                                                                    </div>

                                                                    <div class="d-flex flex-row align-items-center mb-4">
                                                                        <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                                                        <div class="form-outline flex-fill mb-0">
                                                                            <input type="password" id="form3Example4c" class="form-control" placeholder="Enter Password" />

                                                                        </div>
                                                                    </div>

                                                                    <div class="d-flex flex-row align-items-center mb-4">
                                                                        <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                                                                        <div class="form-outline flex-fill mb-0">
                                                                            @Html.PasswordFor(m => m.CustomerEntity.Password, new { @type = "password", @class = "form-control", placeholder = "Comfirm password" })
                                                                            @Html.ValidationMessageFor(m => m.CustomerEntity.Password, "", new { @class = "text-danger" })

                                                                        </div>
                                                                    </div>


                                                                    <div class="d-flex flex-row align-items-center mb-4">
                                                                        <input class="form-check-input me-2" type="checkbox" value="" id="form2Example3c" />
                                                                        <label class="form-check-label" for="form2Example3">
                                                                            I'm not robot
                                                                        </label>
                                                                        <img src="https://www.vectorlogo.zone/logos/google_recaptcha/google_recaptcha-official.svg" style="width:50px;height:50px;" />
                                                                    </div>


                                                                    <div class="d-flex flex-row align-items-center mb-4">
                                                                        <input type="submit" value="Register" class="btn btn-primary" style="width:300px;" />

                                                                    </div>


                                                                }

                                                            </div>
                                                            <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                                                                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                                                                     class="img-fluid" alt="Sample image">

                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </section>

                      
                    </div>
                
        
       

        </div><!-- /.container-fluid -->















    @if (ViewBag.Message != null)
    {
        <script type="text/javascript">
            window.alert("@ViewBag.Message");
            window.location.href = '@Url.Action("GetCustomerList", "Customer")';
        </script>
    }

