@model Spring_Microfinance_Management_System.Models.Customer

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <title>Login</title>
</head>

<body>

   
    <!-- ======= Contact Section ======= -->
    <section id="contact" class="contact">

        <div class="container" data-aos="fade-up">

            <header class="section-header"></header>

            <div class="row gy-4">

                <div class="col-lg-6">

                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg"
                         class="img-fluid" alt="Phone image">

                </div>

                <div class="col-lg-6">
                   
                    <p class="h1 fw-bold mb-5 mx-1 mx-md-4 mt-4" style="color:#0d6efd">Login Here !!!</p>
                    <div class="card-group" style="width:400px; height:auto">
                        <div class="card-body">
                            <div class="card p-5 ">
                                <div class="row">
                                    <div class="col-6 mx-auto" style="width: 150%;">

                                        <div class="form-group" style="width: 150%;">

                                            @using (Html.BeginForm("Login", "Customer", FormMethod.Post))
                                            {
                                                @Html.AntiForgeryToken()
                                                @Html.ValidationSummary()


                                                <div class="form-group">
                                                    @Html.TextBoxFor(model => model.CustomerEntity.Email, new { @class = "form-control ", placeholder = "Enter your Email" })
                                                    @Html.ValidationMessageFor(model => model.CustomerEntity.Email,"", new { @class = "text-danger" })
                                                </div>

                                                <div class="form-group">

                                                    @Html.PasswordFor(model => model.CustomerEntity.Password, new { @class = "form-control", placeholder = "Enter your Password" })
                                                    @Html.ValidationMessageFor(model => model.CustomerEntity.Password,"", new { @class = "text-danger" })
                                                </div>

                                                @*<div class="checkbox">
                                        <label style="font-size:15px">
                                            @Html.CheckBoxFor(model => model.CustomerEntity.RememberMe) @Html.DisplayNameFor(model => model.RememberMe)
                                        </label>
                                    </div>*@

                                                <button type="submit" class="btn btn-primary" style="font-size:medium">Log in</button> <div class="text-center text-lg-start mt-4 pt-2">

                                                    <p class="small fw-bold mt-2 pt-1 mb-0">
                                                        Don't have an account?
                                                        <a href="Register" class="link-primary">Register</a>
                                                    </p>
                                                </div>


                                            }

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>




                </div>

            </div>

        </div>

    </section><!-- End Contact Section -->


</body>

</html>
@if (ViewBag.Message != null)
{
    <script type="text/javascript">
        window.alert("@ViewBag.Message");

    </script>
}