@model Spring_Microfinance_Management_System.Models.StaffMaintenance
<br/>
<div class="container mt-5 d-flex justify-content-center">
    <div class="card p-5">
        <h5 class="total-amount">Login Here</h5>
        <form class="form-inline" action="/StaffMaintenance/Login" method="post">
            <div class="pt-4">
                @Html.AntiForgeryToken()
            
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.TextBoxFor(model => model.StaffEntity.StaffID, new { @class = "form-control credit-card-number", placeholder = "Enter Your ID", maxlength = "19" })
                @Html.ValidationMessageFor(model => model.StaffEntity.StaffID, "", new { @class = "text-danger" })
            </div>
            <div class="pt-4">
                @Html.PasswordFor(model => model.StaffEntity.Password, new { @class = "form-control credit-card-number", placeholder = "Enter Password", maxlength = "19" })
                @Html.ValidationMessageFor(model => model.StaffEntity.Password, "", new { @class = "text-danger" })
            </div>

            <div class="d-flex justify-content-between pt-5 align-items-center">
                <a href="/Home/Index" class="btn btn-outline-primary">Cancel</a>
                <button type="submit" class="btn payment-btn">Login</button>

            </div>
           
        </form>
            </div>
</div>
<br />
<style>

    body {
        background-color: aliceblue
    }

    .card {
        width: 340px;
        border-radius: 35px;
        background-color: #fff;
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19)
    }

    .total-amount {
        font-size: 22px;
        font-weight: 700;
        color: #383737
    }

    .amount-container {
        background-color: #e9eaeb;
        padding: 6px;
        padding-left: 15px;
        padding-right: 15px;
        border-radius: 8px
    }

    .amount-text {
        font-size: 20px;
        font-weight: 700;
        color: black
    }

    .dollar-sign {
        font-size: 20px;
        font-weight: 700;
        color: dodgerblue
    }

    .label-text {
        font-size: 16px;
        font-weight: 600;
        color: #b2b2b2
    }

    .credit-card-number {
        width: 290px;
        z-index: 28;
        border: 2px solid #ced4da;
        border-radius: 6px;
        font-weight: 600
    }

        .credit-card-number:focus {
            box-shadow: none;
            border: 2px solid #673AB7
        }

    .visa-icon {
        position: relative;
        top: 42px;
        right: 14px;
        z-index: 30
    }

    .expiry-class {
        width: 120px;
        border: 2px solid #ced4da;
        font-weight: 600;
        font-size: 12px;
        height: 48px
    }

        .expiry-class:focus {
            box-shadow: none;
            border: 2px solid #673AB7
        }

    .cvv-class {
        width: 120px;
        border: 2px solid #ced4da;
        font-weight: 600;
        font-size: 12px;
        height: 48px
    }

        .cvv-class:focus {
            box-shadow: none;
            border: 2px solid #673AB7
        }

    .payment-btn {
        background-color: dodgerblue;
        padding: 15px;
        padding-left: 25px;
        padding-right: 25px;
        color: #fff;
        font-weight: 600;
        border-radius: 12px
    }

        .payment-btn:hover {
            box-shadow: none;
            color: #fff
        }

    .cancel-btn {
        background-color: #fff;
        color: #b2b2b2;
        padding: 0px;
        padding-top: 3px;
        padding-bottom: 3px;
        font-weight: 600;
        border-radius: 6px
    }

        .cancel-btn:hover {
            border: 2px solid #b2b2b2;
