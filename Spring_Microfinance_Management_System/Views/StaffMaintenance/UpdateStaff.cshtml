@model Spring_Microfinance_Management_System.Models.StaffMaintenance
@using Spring_Microfinance_Management_System.Common
@{
    ViewBag.Title = "UpdateStaff";
    Layout = "~/Views/Shared/_sideBar.cshtml";
}

<div class="content-wrapper">


    <section class="vh-100" style="background-color: aliceblue;">

        <div class="row d-flex justify-content-center align-items-center h-100">

            <div class="col-lg-12 col-xl-11">

                <div class="card text-black" style="border-radius: 25px;">

                    <div class="card-body p-md-5">

                        <div class="row justify-content-center">

                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">


                                @*mx-1 mx-md-4*@
                                @using (Html.BeginForm("AddNewStaff", "StaffMaintenance", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    @Html.HiddenFor(model => model.StaffEntity.StaffID)


                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fa fa-user fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            @Html.TextBoxFor(m => m.StaffEntity.StaffName, new { @class = "form-control", placeholder = "Enter Name" })
                                            @Html.ValidationMessageFor(m => m.StaffEntity.StaffName, "", new { @class = "text-danger" })

                                        </div>

                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fa fa-user fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            @Html.DropDownListFor(model => model.StaffEntity.BranchNo,ViewOperation.GetDropDownList(Model.BranchList), "Select Branch",
                                                        new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.StaffEntity.BranchNo, "", new { @class = "text-danger" })

                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            @Html.DropDownListFor(model => model.StaffEntity.RoleID,ViewOperation.GetDropDownList(Model.RoleList),"Select Role",
                                                        new { @class = "form-control" })

                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input type="password" id="form3Example4c" class="form-control" placeholder="Enter Password" />

                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            @Html.TextBoxFor(m => m.StaffEntity.Password, new { @type = "password", @class = "form-control", placeholder = "Comfirm password" })
                                            @Html.ValidationMessageFor(m => m.StaffEntity.Password, "", new { @class = "text-danger" })

                                        </div>
                                    </div>

                               

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fa fa-user fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">

                                            @Html.TextBoxFor(model => model.StaffEntity.FileBase, new { type = "file", @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.StaffEntity.FileBase, "", new { @class = "text-danger" })

                                        </div>
                                    </div>


                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-user-plus fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input type="submit" value="Update" class="btn btn-block btn-primary" />

                                        </div>
                                    </div>


                                }

                            </div>
                            <div class="d-flex flex-row align-items-center mb-4">

                                <img src=@Model.StaffEntity.FileBase>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>


<link rel="stylesheet" href="~/staffRegister/fonts/material-icon/css/material-design-iconic-font.min.css">

