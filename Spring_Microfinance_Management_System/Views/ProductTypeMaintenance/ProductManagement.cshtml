@model Spring_Microfinance_Management_System.Models.ProductTypeMaintenance

@{
    ViewBag.Title = "ProductManagement";
    Layout = "~/Views/Shared/_sideBar.cshtml";
}

<div class="content-wrapper">

    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">

                </div><!-- /.col -->


            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">

            <!-- Main row -->
            <div class="row">


            </div>


            <div class="container">
                <div class="row">
                    <div class="col-xl-12">
                        <div class="card">
                            <div class="card-body">
                                <h3>Product</h3> <br />
                                <div class="table-responsive">
                                    <table class="table table-hover mb-0">

                                        <thead>
                                            <tr>
                                                <th>Product Type ID</th>
                                                <th>Product Type</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>

                                            @foreach (var data in Model.ProductTypeList)
                                            {
                                                <tr>

                                                    <td>
                                                        @Html.DisplayFor(modelItem => data.ProductTypeID)
                                                    </td>

                                                    <td>
                                                        @Html.DisplayFor(modelItem => data.ProductType)
                                                    </td>


                                                    <td>
                                                        <a href="/ProductTypeMaintenance/EditProductType?productTypeID=@data.ProductTypeID">
                                                            <i class="fa fa-edit" style="font-size:15.5px;color:forestgreen"></i>
                                                        </a>


                                                        <a href="/ProductTypeMaintenance/DeleteProductType?productTypeID=@data.ProductTypeID" class="confirmation">
                                                            <i class="fas fa-trash-alt" style="font-size:15.5px;color:red"></i>
                                                        </a>
                                                    </td>

                                                </tr>

                                            }

                                        </tbody>
                                    </table>
                                </div>
                                <!--end table-responsive-->
                                <br />
                                <a href="/ProductTypeMaintenance/AddProductType" class="btn btn-primary" style="float:right">Add Product</a>
                            </div>

                            <hr />

                            <div class="card-body">
                                <h3>Interest Rate</h3><br />
                                <div class="table-responsive">
                                    <table class="table table-hover mb-0">
                                        <thead>
                                            <tr>
                                                <th>Interest Rate ID</th>
                                                <th>Interest Rate</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>

                                            @foreach (var data in Model.InterestRateList)
                                            {
                                                <tr>

                                                    <td>
                                                        @Html.DisplayFor(modelItem => data.InterestRateID)
                                                    </td>

                                                    <td>
                                                        @Html.DisplayFor(modelItem => data.InterestRate)
                                                    </td>

                                                    <td>
                                                       
                                                            
                                                            <a href="/InterestRateMaintenance/EditInterestRate?interestRateID=@data.InterestRateID">
                                                                <i class="fa fa-edit" style="font-size:15.5px;color:forestgreen"></i>
                                                            </a>
                                                        
       
                                                            <a href="/InterestRateMaintenance/DeleteInterestRate?interestRateID=@data.InterestRateID" class="confirmation">
                                                                <i class="fas fa-trash-alt" style="font-size:15.5px;color:red"></i>
                                                            </a>
                                                            

                                                    </td>

                                                </tr>

                                            }

                                        </tbody>
                                    </table>
                                </div>
                                <!--end table-responsive-->
                                <br />
                                <a href="/InterestRateMaintenance/AddInterestRate" class="btn btn-primary" style="float:right">Add Interest Rate</a>
                            </div>

                            <hr />

                            <div class="card-body">
                                <h3>Delay Interest Rate</h3> <br />
                                <div class="table-responsive">
                                    <table class="table table-hover mb-0">
                                        <thead>
                                            <tr>
                                                <th>Delay Interest Rate ID</th>
                                                <th>Delay Interest Rate</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>

                                            @foreach (var data in Model.DelayInterestRateList)
                                            {
                                                <tr>

                                                    <td>
                                                        @Html.DisplayFor(modelItem => data.DelayInterestRateID)
                                                    </td>

                                                    <td>
                                                        @Html.DisplayFor(modelItem => data.DelayInterestRate)
                                                    </td>

                                                    <td>
                                                        <a href="/DelayInterestRateMaintenance/EditDelayInterestRate?delayinterestRateID=@data.DelayInterestRateID">
                                                            <i class="fa fa-edit" style="font-size:15.5px;color:forestgreen"></i>
                                                        </a>



                                                        <a href="/DelayInterestRateMaintenance/DeleteDelayInterestRate?delayinterestRateID=@data.DelayInterestRateID" class="confirmation">
                                                            <i class="fas fa-trash-alt" style="font-size:15.5px;color:red"></i>
                                                        </a>
                                                    </td>
                                                </tr>


                                            }

                                        </tbody>
                                    </table>
                                </div>
                                <!--end table-responsive-->
                                <br />
                                <a href="/DelayInterestRateMaintenance/AddDelayInterestRate" class="btn btn-primary" style="float:right">Add Delay Interest Rate</a>
                            </div>

                        </div>
                    </div>
                </div>
            </div>


        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>




<style>
    body {
        background: #f5f5f5;
    }

    .card {
        border: none;
        -webkit-box-shadow: 1px 0 20px rgba(96,93,175,.05);
        box-shadow: 1px 0 20px rgba(96,93,175,.05);
        margin-bottom: 30px;
    }

    .table th {
        font-weight: 500;
        color: #fff;
    }

    .table thead {
        background-color: dodgerblue;
    }

    .table > tbody > tr > td, .table > tfoot > tr > td, .table > thead > tr > td {
        padding: 11px 12px;
        vertical-align: middle;
    }


    .thumb-sm {
        height: 32px;
        width: 32px;
    }

    .badge-soft-warning {
        background-color: rgba(248,201,85,.2);
        color: #f8c955;
    }

    .badge {
        font-weight: 500;
    }

    .badge-soft-primary {
        background-color: rgba(96,93,175,.2);
        color: #605daf;
    }

    tr:nth-child(even) {
        background-color: aliceblue;
    }
    td a {
        display: inline-block;
        padding: 5px;
    }

        td a:first-child {
            width: 23px;
        }

        td a:last-child {
            width: 50px;
        }
</style>

@if (ViewBag.Msg != null)
{
    <script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.Message");
        };
    </script>

}

<script type="text/javascript">
    $('.confirmation').on('click', function () {
        return confirm('Are you sure you want to Delete?');
    });
</script>