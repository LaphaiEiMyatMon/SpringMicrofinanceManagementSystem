@model Spring_Microfinance_Management_System.Models.ProductTypeMaintenance


@*@Html.Partial("~/Views/Shared/_Home.cshtml")

    @Html.Partial("~/Views/Shared/_MenuBar.cshtml")*@

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<table class="table" style="width:60%">

    <tr>
        <th>
            ID
        </th>
        <th>
            Product Type
        </th>
        <th>
            Action
        </th>
    </tr>

    @foreach (var data in Model.ProductTypeList)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => data.ProductTypeID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => data.ProductType)
            </td>

            <td>
                <i class="fa fa-pencil-square fa-lg" style="font-size:15px;color:green">
                    @Html.ActionLink("Edit", "EditProductType", new { productTypeID = data.ProductTypeID })
                </i>
                <i class="fa fa-trash-o" style="font-size:15px;color:red">
                    @Html.ActionLink("Delete", "DeleteProductType", new { productTypeID = data.ProductTypeID }, new { @class = "confirmation" })
                </i>
            </td>
        </tr>
    }
</table>
<div Class="text-mid">
    <div class="float-left">
        <a href="CreateRole" class="btn btn-warning">Back</a>
        <a href="AddProductType" class="btn btn-success">Add New Product</a>
    </div>
</div>

<style>
    th {
        background-color: skyblue;
    }

    table {
        border: 1px solid black;
    }

    tr:nth-child(odd) {
        background-color: aliceblue;
    }
</style>


@if (ViewBag.Message != null)
{
    <script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.Message");
        };
    </script>

}

<script type="text/javascript">
    $('.confirmation').on('click', function () {
        return confirm('Are you sure you want to Delete?');
    });
</script>
