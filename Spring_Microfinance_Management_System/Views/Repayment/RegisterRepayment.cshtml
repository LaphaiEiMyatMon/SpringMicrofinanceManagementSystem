@model Spring_Microfinance_Management_System.Models.Repayment
@using Spring_Microfinance_Management_System.Models
@using Spring_Microfinance_Management_System.Common
@{
    ViewBag.Title = "RegisterRepayment";
    Layout = "~/Views/Shared/_sideBar.cshtml";
}


<div class="container mt-5 d-flex justify-content-center">
    <form action="/Repayment/RegisterRepayment" method="post">
        <div class="card p-5">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <h5 class="total-amount">Register Repayment</h5>
            <div class="pt-4">
                <label class="d-flex justify-content-between"> <span class="label-text label-text-cc-number">Enter CustomerID</span></label>
                @Html.TextBoxFor(model => model.RepaymentEntity.CustomerID, new { @class = "form-control", maxlength = "19" })
            </div>
            <div class="pt-4">
                <label class="d-flex justify-content-between"> <span class="label-text label-text-cc-number">Enter Amount</span></label>
                @Html.TextBoxFor(model => model.RepaymentEntity.RepaymentAmount, new { @class = "form-control", maxlength = "19" })
                @Html.ValidationMessageFor(model => model.RepaymentEntity.RepaymentAmount, "", new { @class = "text-danger" })
            </div>
            <div class="pt-4">
                <label class="d-flex justify-content-between"> <span class="label-text label-text-cc-number">Choose Payment Method</span></label>
                @Html.DropDownListFor(model => model.RepaymentEntity.PaymentMethod,ViewOperation.GetDropDownList(Model.PaymentMethodList), "'Choose Payment Method'",
                                                                   new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.RepaymentEntity.PaymentMethod, "", new { @class = "text-danger" })
            </div>
            <div class="d-flex justify-content-between pt-5 align-items-center"> <button type="reset" class="btn cancel-btn">Cancel</button> <button type="submit" class="btn payment-btn">Make Payment</button> </div>
        </div>
    </form>
</div>

