@model Spring_Microfinance_Management_System.Models.Repayment
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>Home Page</title>
    <meta content="" name="description">

    <meta content="" name="keywords">
</head>

<body>


    


    <br /><br />

    <main id="main">
        <section id="about" class="about">

            <div class="container" data-aos="fade-up">
                <div class="container px-0">
                    <div class="card px-md-4 px-3 pb-4">
                        <div class="d-flex flex-column my-3">
                            <p class="h8">Payment method</p>
                            <p class="text-muted">Choose your payment method to pay</p>
                        </div>
                        <div class="payment mb-2">
                            <a href="CreditCard">
                                <div class="btn btn-primary">
                                    <div>
                                        <span class="far fa-credit-card pay"></span>
                                        <span class="ps-3"> Credit Card</span>
                                    </div>
                                    <span class="fas fa-arrow-right"></span>
                                </div>
                            </a>
                        </div>
                        
                        <div class="payment mb-2">
                            <a href="MobileWallet">
                                <div class="btn btn-primary">
                                    <div>
                                        <span class="fas fa-wallet"></span>
                                        <span class="ps-3">Mobile Wallet</span>
                                    </div>
                                    <span class="fas fa-arrow-right"></span>
                                </div>
                            </a>
                        </div>
                        <div class="payment mb-2">
                            <a href="#">
                                <div class="btn btn-primary">
                                    <div>
                                        <span class="fas fa-university pay"></span>
                                        <span class="ps-3">Inernet banking</span>
                                    </div>
                                    <span class="fas fa-arrow-right"></span>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>

        </section>
    </main><!-- End #main -->
    <style>
      

        body {
           
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            background-color: aliceblue;
            padding: 30px 10px;
        }

        .card {
            max-width: 500px;
            background-color: #00203FFF;
            margin: auto;
            color: white;
            border-radius: 10px;
            position: relative;
        }

        p {
            margin: 0px;
        }

        .h8 {
            font-size: 32px;
            font-weight: 600;
            word-spacing: 0px;
        }

        .text-muted {
            font-size: 15px;
            font-weight: 550;
        }

        a {
            text-decoration: none;
        }

        .btn.btn-primary {
            width: 100%;
            height: 70px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 15px;
            background-color: dodgerblue;
            border: none;
        }

        .fas.fa-arrow-right {
            width: 40px;
            height: 40px;
            background-color: #060672;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .btn.btn-primary:hover .fas.fa-arrow-right {
            transform: translate(15px);
            transition: transform 0.2s ease-in;
        }

        .pay {
            font-size: 30px;
        }

        .credit {
            width: 80px;
            height: 20px;
            object-fit: cover;
        }
    </style>
</body>

</html>


