@model Spring_Microfinance_Management_System.Models.Repayment
@using Spring_Microfinance_Management_System.Models

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.RepaymentEntity.LoanApplicationID)
    @Html.HiddenFor(model => model.RepaymentEntity.DeadLine)
    @Html.HiddenFor(model => model.RepaymentEntity.OriginalLoanAmount)
    @Html.HiddenFor(model => model.RepaymentEntity.InterestRate)
    @Html.HiddenFor(model => model.RepaymentEntity.RepaymentTime)
    @Html.HiddenFor(model => model.RepaymentEntity.RemainingDebt)
    @Html.HiddenFor(model => model.RepaymentEntity.MonthlyInterestAmount)
    @Html.HiddenFor(model => model.RepaymentEntity.MonthlyPrincipalAmount)
    @Html.HiddenFor(model => model.RepaymentEntity.MonthlyTotalAmount)
    @Html.HiddenFor(model => model.RepaymentEntity.GrandTotalRepaymentAmount)
    <br />
    <div class="container mt-5 d-flex justify-content-center">
        <div class="card p-5">

            <h5 class="total-amount">Credit Card Payment</h5>
            <hr />
            <div class="pt-4">
                <label class="d-flex justify-content-between"> <span class="label-text label-text-cc-number">CARD NUMBER</span><img src="https://img.icons8.com/dusk/64/000000/visa.png" width="30" class="visa-icon" /></label>
                @Html.TextBoxFor(model => model.RepaymentEntity.CardNumber, new { @class = "form-control credit-card-number", placeholder = "", maxlength = "19" })
                @Html.ValidationMessageFor(model => model.RepaymentEntity.CardNumber, "", new { @class = "text-danger" })
            </div>

            <div class="pt-4">
                <label class="d-flex justify-content-between"> <span class="label-text label-text-cc-number">CARD HOLDER NAME</span></label>
                @Html.TextBoxFor(model => model.RepaymentEntity.CardHolderName, new { @class = "form-control credit-card-number", placeholder = "", maxlength = "19" })
                @Html.ValidationMessageFor(model => model.RepaymentEntity.CardHolderName, "", new { @class = "text-danger" })

            </div>

            <div class="d-flex justify-content-between pt-4">
                <div>
                    <label><span class="label-text">EXPIRY</span> </label>

                    @Html.TextBoxFor(model => model.RepaymentEntity.ExpirationDate, new { @class = "form-control expiry-class", placeholder = "MM / YY" })
                    @Html.ValidationMessageFor(model => model.RepaymentEntity.ExpirationDate, "", new { @class = "text-danger" })

                </div>
                <div>
                    <label><span class="label-text">CVV</span></label>
                    @Html.TextBoxFor(model => model.RepaymentEntity.CVV, new { @class = "form-control cvv-class" })
                    @Html.ValidationMessageFor(model => model.RepaymentEntity.CVV, "", new { @class = "text-danger" })
                </div>
            </div> <br /><hr />

            <div class="d-flex justify-content-between align-items-center">
                <h5 class="total-amount">Total amount</h5>
                <div class="amount-container"><span class="amount-text"><span class="dollar-sign">$</span>@Model.RepaymentEntity.MonthlyTotalAmount</span></div>
            </div>
            <div class="d-flex justify-content-between pt-5 align-items-center"> <button type="button" class="btn cancel-btn">Cancel</button><input type="submit" value="Make Payment" class="btn payment-btn" /></div>
        </div>
    </div>
    <br />
}

<style>

    body {
        background-color: aliceblue
    }

    .card {
        width: 340px;
        border-radius: 35px;
        background-color: #fff;
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19)
    }

    .total-amount {
        font-size: 22px;
        font-weight: 700;
        color: #383737
    }

    .amount-container {
        background-color: #e9eaeb;
        padding: 6px;
        padding-left: 15px;
        padding-right: 15px;
        border-radius: 8px
    }

    .amount-text {
        font-size: 20px;
        font-weight: 700;
        color: black
    }

    .dollar-sign {
        font-size: 20px;
        font-weight: 700;
        color: dodgerblue
    }

    .label-text {
        font-size: 16px;
        font-weight: 600;
        color: #b2b2b2
    }

    .credit-card-number {
        width: 290px;
        z-index: 28;
        border: 2px solid #ced4da;
        border-radius: 6px;
        font-weight: 600
    }

        .credit-card-number:focus {
            box-shadow: none;
            border: 2px solid #673AB7
        }

    .visa-icon {
        position: relative;
        top: 42px;
        right: 14px;
        z-index: 30
    }

    .expiry-class {
        width: 120px;
        border: 2px solid #ced4da;
        font-weight: 600;
        font-size: 12px;
        height: 48px
    }

        .expiry-class:focus {
            box-shadow: none;
            border: 2px solid #673AB7
        }

    .cvv-class {
        width: 120px;
        border: 2px solid #ced4da;
        font-weight: 600;
        font-size: 12px;
        height: 48px
    }

        .cvv-class:focus {
            box-shadow: none;
            border: 2px solid #673AB7
        }

    .payment-btn {
        background-color: dodgerblue;
        padding: 15px;
        padding-left: 25px;
        padding-right: 25px;
        color: #fff;
        font-weight: 600;
        border-radius: 12px
    }

        .payment-btn:hover {
            box-shadow: none;
            color: #fff
        }

    .cancel-btn {
        background-color: #fff;
        color: #b2b2b2;
        padding: 0px;
        padding-top: 3px;
        padding-bottom: 3px;
        font-weight: 600;
        border-radius: 6px
    }

        .cancel-btn:hover {
            border: 2px solid #b2b2b2;
            color: #b2b2b2
        }

        .cancel-btn:focus {
            box-shadow: none
        }

    .label-text-cc-number {
        position: relative;
        top: 4px
    }
</style>