@model Spring_Microfinance_Management_System.Models.Repayment
<br />

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.RepaymentEntity.LoanApplicationID)
    @Html.HiddenFor(model => model.RepaymentEntity.DeadLine)
    @Html.HiddenFor(model => model.RepaymentEntity.OriginalLoanAmount)
    @Html.HiddenFor(model => model.RepaymentEntity.InterestRate)
    @Html.HiddenFor(model => model.RepaymentEntity.RepaymentTime)
    @Html.HiddenFor(model => model.RepaymentEntity.RemainingDebt)
    @Html.HiddenFor(model => model.RepaymentEntity.MonthlyInterestAmount)
    @Html.HiddenFor(model => model.RepaymentEntity.MonthlyPrincipalAmount)
    @Html.HiddenFor(model => model.RepaymentEntity.MonthlyTotalAmount)
    @Html.HiddenFor(model => model.RepaymentEntity.GrandTotalRepaymentAmount)
    <div class="container mt-5 d-flex justify-content-center">
        <div class="card p-5">

            <h5 class="total-amount">Mobile Wallet</h5>


            <hr />
            <div class="pt-4">

                @Html.TextBoxFor(model => model.RepaymentEntity.MobileWalletAccount, new { @class = "form-control credit-card-number", placeholder = "Enter Your Mobile Wallet Account", maxlength = "19" })
                @Html.ValidationMessageFor(model => model.RepaymentEntity.MobileWalletAccount, "", new { @class = "text-danger" })
            </div>
            <div class="pt-4">
                @Html.TextBoxFor(model => model.RepaymentEntity.RepaymentAmount, new { @class = "form-control credit-card-number", placeholder = "Enter Amount", maxlength = "19" })

                @Html.ValidationMessageFor(model => model.RepaymentEntity.RepaymentAmount, "", new { @class = "text-danger" })
            </div>
            <br />
            <hr />
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="total-amount">Total amount</h5>
                <div class="amount-container"><span class="amount-text"><span class="dollar-sign">$</span>@Model.RepaymentEntity.MonthlyTotalAmount</span></div>
            </div>

            <div class="d-flex justify-content-between pt-5 align-items-center"> <button type="button" class="btn cancel-btn">Cancel</button> <button type="submit" class="btn payment-btn" onclick="myFunction()">Make Payment</button> </div>
        </div>
    </div>
}
    <br />
    <script>
        function myFunction() {
            alert("Please approve at your Mobile Wallet Account to make the transaction successfull.");
        }
    </script>
