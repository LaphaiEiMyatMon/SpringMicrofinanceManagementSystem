@model Spring_Microfinance_Management_System.Models.PaymentMethodMaintenance
@using Spring_Microfinance_Management_System.Models
@{
    ViewBag.Title = "EditPaymentMethod";
    Layout = "~/Views/Shared/_sideBar.cshtml";
}
<div class="container mt-5 d-flex justify-content-center">
    <form action="/PaymentMethodMaintenance/EditPaymentMethod" method="post">
        <div class="card p-5">
            <h5 class="total-amount">Update Payment Method</h5>
            @Html.HiddenFor(model => model.PaymentMethodEntity.PaymentMethodID)
            <div class="pt-4">
                <label class="d-flex justify-content-between"> <span class="label-text label-text-cc-number">Payment Method</span></label>
                @Html.TextBoxFor(model => model.PaymentMethodEntity.PaymentMethod, new { @class = "form-control credit-card-number", placeholder = "", maxlength = "19" })

            </div>


            <div class="d-flex justify-content-between pt-5 align-items-center">  <a href="/PaymentMethodMaintenance/PaymentMethodList" class="btn btn-outline-primary">Back</a> <button type="submit" class="btn btn-primary confirmation" >Update</button> </div>
        </div>
    </form>
</div>

<style>

    body {
        background-color: aliceblue
    }

    .card {
        width: 400px;
        border-radius: 35px;
        background-color: #fff;
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19)
    }

    .total-amount {
        font-size: 22px;
        font-weight: 700;
        color: #383737
    }

    .amount-container {
        background-color: #e9eaeb;
        padding: 6px;
        padding-left: 15px;
        padding-right: 15px;
        border-radius: 8px
    }

    .amount-text {
        font-size: 20px;
        font-weight: 700;
        color: black
    }

    .dollar-sign {
        font-size: 20px;
        font-weight: 700;
        color: dodgerblue
    }

    .label-text {
        font-size: 16px;
        font-weight: 600;
        color: #b2b2b2
    }

    .credit-card-number {
        width: 290px;
        z-index: 28;
        border: 2px solid #ced4da;
        border-radius: 6px;
        font-weight: 600
    }

        .credit-card-number:focus {
            box-shadow: none;
            border: 2px solid #673AB7
        }

    .visa-icon {
        position: relative;
        top: 42px;
        right: 14px;
        z-index: 30
    }

    .expiry-class {
        width: 120px;
        border: 2px solid #ced4da;
        font-weight: 600;
        font-size: 12px;
        height: 48px
    }

        .expiry-class:focus {
            box-shadow: none;
            border: 2px solid #673AB7
        }

    .cvv-class {
        width: 120px;
        border: 2px solid #ced4da;
        font-weight: 600;
        font-size: 12px;
        height: 48px
    }

        .cvv-class:focus {
            box-shadow: none;
            border: 2px solid #673AB7
        }

    .payment-btn {
        background-color: dodgerblue;
        padding: 15px;
        padding-left: 25px;
        padding-right: 25px;
        color: #fff;
        font-weight: 600;
        border-radius: 12px
    }

        .payment-btn:hover {
            box-shadow: none;
            color: #fff
        }

    .cancel-btn {
        background-color: #fff;
        color: #b2b2b2;
        padding: 0px;
        padding-top: 3px;
        padding-bottom: 3px;
        font-weight: 600;
        border-radius: 6px
    }

        .cancel-btn:hover {
            border: 2px solid #b2b2b2;
            color: #b2b2b2
        }

        .cancel-btn:focus {
            box-shadow: none
        }

    .label-text-cc-number {
        position: relative;
        top: 4px
    }
</style>

@if (ViewBag.Message != null)
{
    <script type="text/javascript">
        window.alert("@ViewBag.Message");
        window.location.href = '@Url.Action("PaymentMethodList", "PaymentMethodMaintenance")';
    </script>
}

    <script type="text/javascript">
        $('.confirmation').on('click', function () {
            return confirm('Are you sure you want to Update?');
        });
    </script>